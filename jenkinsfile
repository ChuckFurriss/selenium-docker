pipeline {
    // master executor should be set to 0
    agent any
    stages {
        stage('Build Jar') {
            steps {
                //sh
                sh "cd /Users/kevin.hernandez"
                sh "source .bash_profile"
                sh "cd /Users/kevin.hernandez/Documents/docker-udemy/jenkins/workspace/SELENIUM_DOCKER_BUILDER"
                sh "mvn clean package -DskipTests"
            }
        }
        stage('Build Image') {
            steps {
                //sh
                sh "docker build -t='kevinhm/selenium-docker' ."
            }
        }
        stage('Push Image') {
            steps {
			    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'pass', usernameVariable: 'user')]) {
                    //sh
			        sh "docker login --username=${user} --password=${pass}"
			        sh "docker push kevinhm/selenium-docker:latest"
			    }
            }
        }
    }
}